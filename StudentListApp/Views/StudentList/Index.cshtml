@{
    ViewData["Title"] = "Student List";
}

@model List<StudentListApp.Models.Student.StudentModel>

<div class="text-center">
    <h1 class="display-4">Student List</h1>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>LastName</th>
            <th>Nr Index</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td onclick="location.href='@Url.Action("Oceny", "StudentList", new { id = item.Id })';" style="cursor:pointer;">@item.Id</td>
                <td onclick="location.href='@Url.Action("Oceny", "StudentList", new { id = item.Id })';" style="cursor:pointer;">@item.Name</td>
                <td onclick="location.href='@Url.Action("Oceny", "StudentList", new { id = item.Id })';" style="cursor:pointer;">@item.LastName</td>
                <td onclick="location.href='@Url.Action("Oceny", "StudentList", new { id = item.Id })';" style="cursor:pointer;">@item.NrIndex</td>
                <td>
                    <a class="custom-link" asp-controller="StudentList" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
                <td>
                    <a asp-controller="StudentList" class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this student?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-area="" asp-controller="StudentList" asp-action="Add">Add</a>

<style>
    .custom-link {
        text-decoration: none; 
        color: inherit;
</style>
