@{
    ViewData["Title"] = "Details";

}
@model StudentListApp.Models.Zajecia.ZajeciaModel;

<div class ="text-center">
    <h1>Szczegóły zajeć @Model.Name </h1>
    <h2>Lista Studentów</h2>
 </div>
    <table class ="table">
        <thead>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Last Name</td>
                <td>Nr Index</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.Students)
            {
                <tr onclick="location.href='@Url.Action("Oceny", "StudentList", new { id = student.Id })';" style="cursor:pointer;">
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.LastName</td>
                    <td>@student.NrIndex</td>
                <td>
                    <a asp-controller="Zajecia" class="btn btn-primary" asp-action="DeleteStudent" asp-route-id="@Model.Id" asp-route-idStudent="@student.Id" onclick="return confirm('Are you sure you want to delete this student?');">Delete</a>
                </td>
                </tr>
            }
        </tbody>
    </table>       
<a class="btn btn-primary" asp-area="" asp-controller="Zajecia" asp-action="AddStudents" asp-route-zajeciaId="@Model.Id">Add</a>
