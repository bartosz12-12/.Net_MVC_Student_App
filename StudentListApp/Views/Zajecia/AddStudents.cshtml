@{
    ViewData["Title"] = "Dodaj Studentow";
}

@model List<StudentListApp.Models.Student.StudentModel>


<div class="text-center">
    <h1 class="display-4">Dodaj Studentów</h1>
</div>
<form method="post">
    <input type="hidden" name="zajeciaId" value="@ViewBag.ZajeciaId" />
    <table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Id</th>
            <th>Name</th>
            <th>LastName</th>
            <th>Nr Index</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" name="selectedStudents" value="@item.Id" />
                </td>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.LastName</td>
                <td>@item.NrIndex</td>
            </tr>
        }
    </tbody>
</table>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
