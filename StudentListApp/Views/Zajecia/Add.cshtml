@{
    ViewData["Title"] = "Add";
    var errorMessage = TempData["ErrorMessage"] as string;
}

@model StudentListApp.Models.Zajecia.ZajeciaAdd


<div class="text-center">
    <h1>Add Zajecia</h1>
</div>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input required type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label class="form-label">Description</label>
        <input required type="text" class="form-control" asp-for="Description" />
    </div>
    <div class="mt-3">
        <label class="form-label">Ects</label>
        <input required type="text" class="form-control" asp-for="Ects" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>